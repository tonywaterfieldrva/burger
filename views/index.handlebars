<div class="container">
	<div class="jumbotron">
		<h1>Eat at Joe's Burgers</h1>
		<h3>You Mak'em -- You Eat'em</h3>
		<h2>Make the Burger</h2>
		<img src="/assets/images/burger.png" alt="burger">

		<panel>
			<form class="create-form">
				<div class="form-group">
					<label for="makeburger">Make a New Burger</label>
					<input type="text" id="makeburger" name="burger">
					<button type="submit" class="btn btn-success" id="addburger">
						<span class="fa fa-thumbs-up"></span>
					</button>
				</div>
			</form>
		</panel>
	</div>
	<div class="row">
		<div class="col-sm-6">
			<div class="panel panel-default">
				<div class="panel-heading" id="leftside"><strong>Order Burger</strong></div>
				<div class="panel-body">
					<ul>
						{{#each burgers}}
						{{#unless devoured}}
						<span><strong> {{ this.id }} - {{ this.burger_name }}</strong></span>
						<button type="button" class="eatburger btn btn-warning" id="eatbutton" data-id="{{ this.id }}"
						  data-newDevoured="{{devouer}}"><span class="fa fa-usd"></span><button>
						<hr>
						{{/unless}}
						{{/each}}
					</ul>
				</div>
			</div>
		</div>
		<div>
			<div class="col-sm-6">
				<div class="panel panel-default">
				<div class="panel-heading" id="rightside"><strong>Eat Your Burger</strong></div>
				<div class="panel-body">
					<ul>
						{{#each burgers}}
						{{#if devoured}}
						<span><strong> {{ this.id }} - {{ this.burger_name }} </strong></span>
						<button type="button" class="trashburger btn btn-danger" id="trashbutton" data-id="{{ this.id }}"
						  data-newDevoured="{{devouer}}"><span class="fa fa-trash"></span><button>
						<hr>
						{{/if}}
						{{/each}}
					</ul>
				</div>
			</div>
					
			</div>
		</div>
	</div>
</div>
